{
  "name": "svg-show",
  "displayName": "SVG Preview",
  "description": "Preview SVG files and inline SVG strings with hover and gutter decorations",
  "version": "0.0.1",
  "publisher": "svg-preview",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "svg",
    "preview",
    "icon",
    "gutter",
    "hover"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:php",
    "onLanguage:python",
    "onLanguage:ruby",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:json",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "svg-show.refresh",
        "title": "SVG Preview: Refresh Decorations",
        "icon": "$(refresh)"
      },
      {
        "command": "svg-show.goToLine",
        "title": "Go to SVG line"
      },
      {
        "command": "svg-show.showPreview",
        "title": "SVG: Show Preview in Sidebar",
        "icon": "$(eye)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "svgExplorer",
          "name": "SVG Preview",
          "when": "resourceExtname == .svg || resourceExtname == .ts || resourceExtname == .js || resourceExtname == .tsx || resourceExtname == .jsx || resourceExtname == .html || resourceExtname == .vue || resourceExtname == .svelte"
        },
        {
          "type": "webview",
          "id": "svgPreviewView",
          "name": "SVG Preview Viewer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "svg-show.refresh",
          "when": "view == svgExplorer",
          "group": "navigation"
        },
        {
          "command": "svg-show.showPreview",
          "when": "view == svgExplorer",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "svg",
        "aliases": ["SVG", "svg"],
        "extensions": [".svg"],
        "mimetypes": ["image/svg+xml"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/node": "22.x",
    "typescript": "^5.9.3"
  }
}
